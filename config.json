{
  "training": {
    "optimizer": "adam",
    "scheduler": "cyclic",
    "learning_rate": 0.0003,
    "discriminator_learning_rate": 0.0003,
    "max_norm": 3.0,
    "epochs": 25,
    "batches_per_report": 200,
    "batches_per_sampling": 500,
    "random_seed": 1,
    "loss_criterion": "cross_entropy",
    "bt_ratio": 0,
    "discriminator_ratio": 0,
    "num_samples": 3 
  },
  "data": {
    "train": ["data/gyafc_raw/sentiment.train.0.reduced", "data/gyafc_raw/sentiment.train.1.reduced"],
    "test": ["data/gyafc_raw/sentiment.dev.0_", "data/gyafc_raw/sentiment.dev.1_"],
    "tokenizer": "gpt",
    "share_vocab": true,
    "noise": "dropout",
    "dropout_prob": 0.2,
    "ngram_range": 3,
    "salience_threshold": 5,
    "batch_size": 128,
    "max_len": 50,
    "permutation": 3,
    "working_dir": "testing",
    "vocab_dir": "noise_vocab",
    "lm_dir": "gpt_model"
  },
    "model": {
        "model_type": "delete",
        "emb_dim": 512,
        "encoder": "transformer",
        "bidirectional": true,
        "decoder": "transformer",
        "attention": true,
        "src_hidden_dim": 1024,
        "src_layers": 2,
        "tgt_hidden_dim": 1024,
        "tgt_layers": 2,
        "tie_weights": false,
        "decode": "top_k",
        "beam_width": 5,
        "k": 5,
        "temperature": 1.0,
        "dropout": 0.5
    }
}

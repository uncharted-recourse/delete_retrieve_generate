{
  "training": {
    "optimizer": "adam",
    "scheduler": "plateau",
    "learning_rate": 0.0003,
    "max_norm": 3.0,
    "epochs": 25,
    "batches_per_report": 200,
    "batches_per_sampling": 500,
    "random_seed": 1,
    "loss_criterion": "cross_entropy",
    "bt_ratio": 0
  },
  "data": {
    "src": "data/gyafc_raw/sentiment.train.0",
    "tgt": "data/gyafc_raw/sentiment.train.1",
    "src_test": "data/gyafc_raw/sentiment.dev.0_",
    "tgt_test": "data/gyafc_raw/sentiment.dev.1_",
    "tokenizer": "gpt2",
    "share_vocab": true,
    "noise": "dropout",
    "dropout_prob": 0.1,
    "ngram_range": 5,
    "salience_threshold": 5,
    "batch_size": 64,
    "max_len": 50,
    "permutation": 0,
    "working_dir": "noise",
    "vocab_dir": "noise_vocab",
    "lm_dir": "gpt2_model"
  },
    "model": {
        "model_type": "delete",
        "emb_dim": 128,
        "encoder": "lstm",
        "bidirectional": true,
        "decoder": "lstm",
        "attention": true,
        "discriminator": true,
        "src_hidden_dim": 512,
        "src_layers": 1,
        "tgt_hidden_dim": 512,
        "tgt_layers": 1,
        "decode": "greedy",
        "beam_width": 10,
        "k": 10,
        "temperature": 1.0,
        "dropout": 0.2
    }
}

{
  "training": {
    "optimizer": "adam",
    "scheduler": "plateau",
    "learning_rate": 0.0003,
    "max_norm": 3.0,
    "epochs": 100,
    "batches_per_report": 200,
    "batches_per_sampling": 500,
    "random_seed": 1
  },
  "data": {
    "src": "data/gyafc_raw/sentiment.train.0",
    "tgt": "data/gyafc_raw/sentiment.train.1",
    "src_test": "data/gyafc_raw/sentiment.dev.0_",
    "tgt_test": "data/gyafc_raw/sentiment.dev.1_",
    "tokenizer": "gpt2",
    "share_vocab": true,
    "noise": "word_attributes",
    "dropout_prob": 0.1,
    "ngram_range": 5,
    "salience_threshold": 5,
    "batch_size": 64,
    "max_len": 50,
    "permutation": 0,
    "working_dir": "testing_two",
    "vocab_dir": "vocab_testing"
  },
    "model": {
        "model_type": "delete",
        "emb_dim": 128,
        "attention": false,
        "encoder": "lstm",
        "src_hidden_dim": 512,
        "src_layers": 1,
        "bidirectional": true,
        "tgt_hidden_dim": 512,
        "tgt_layers": 1,
        "decode": "greedy",
        "beam_width": 10,
        "k": 10,
        "temperature": 1.0,
        "dropout": 0.2
    }
}
